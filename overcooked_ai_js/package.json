{
  "name": "overcook",
  "version": "0.0.1",
  "description": "Javascript app for overcook",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build-test": "npm run build-window; jest",
    "build-window": "browserify index-window.js -o overcooked-window.js -t babelify",
    "build": "browserify index.js -o overcooked.js -t babelify",
    "demo": "open http://localhost:8123/demo.html; python2.7 -m SimpleHTTPServer 8123"
  },
  "author": "Mark Ho (mark.ho.cs@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "assert": "^1.4.1",
    "lodash": "^4.17.13",
    "phaser": "^3.15.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "canvas": "^2.5.0",
    "jest": "^23.6.0",
    "jest-canvas-mock": "^2.1.0",
    "jest-expect-message": "^1.0.2",
    "jquery": "^3.4.1",
    "nodemon": "^1.19.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "jest-expect-message",
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "verbose": false,
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
